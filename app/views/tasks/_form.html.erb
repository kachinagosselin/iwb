<%= simple_form_for([@project, @task], :html => {:class => 'form-vertical', :multipart => true }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs offset1">    
    <%=h f.input :title, :label => "Title", :input_html => { :style => 'width: 525px'} %>
    <%=h f.input :summary %>
    <%= f.input :skill %>
  </div>

  <div class="form-actions">
    <span class="pull-right">
      <%= link_to 'Cancel', project_path(@project), class: 'btn' %>
      <%= f.button :submit, class: 'btn btn-primary'%>
    </span>
  </div>
<% end %>

