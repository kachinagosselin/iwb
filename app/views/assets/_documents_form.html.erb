
<script>
$(document).ready(function() {
  $("#add_document").submit(function(event) {
    document.location.reload();
  });
  });
</script>

<%= simple_form_for(@project.assets.build, :url => project_assets_path(@project), :method => :post, :remote => true, :html => {:id => "add_document"} ) do |f| %>
  <%= f.error_notification %>

    <p> You can upload documents about this project below:</p>
<div class="form-inputs">    
    <div class="row">
    <div class="span1" style="width:100px;">Provide URL: </div>
    <div class="span3" style="width:100px;"><%=h f.input :document, :style=>"width:380px;" %></div> 
    </div>
</div>
<div class="form-actions">
    <span class="pull-right">
      <%= f.button :submit %>
    </span>
</div>
<% end %>

